<style>
    body {
        font-family: Arial, sans-serif;
    }
    .modal {
        /* display: none; */
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border-radius: 5px;
        width: 30%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }
    .close {
        color: #aaa;
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }
    .close:hover {
        color: black;
    }



    .form-group select {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background: white;
    }

    .form-group select {
        appearance: none;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18"><path fill="black" d="M7 10l5 5 5-5z"/></svg>');
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 18px;
        cursor: pointer;
    }

</style>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="justifly- left close">&times;</span>
            <!-- contact area -->
			<section class="content-inner-1" style="padding-bottom: 0px; padding-top: 50px;">
				<!-- Product -->
				<div class="container">
					<form class="shop-form" id="modalRequestBook">
						<div class="row" style="margin-right: -45px;">
							<div class="col-lg-12 col-md-12">
								<div class="widget">
									<h4 class="widget-title" style="text-align: left;">Request Book</h4>
									<div class="row col-lg-12 col-md-12">
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalBookTitle" placeholder="Book title">
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalAuthor" placeholder="Author">
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalISBN" placeholder="ISBN">
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalAdditionalInstructions" placeholder="Additional instructions">
										</div>
									</div>
									<button class="btn btn-primary btnhover mb-3" type="button" id="modalRequestBookBtn" > Save <i class="fa fa-arrow-circle-o-down"></i></button>
								</div>
							</div>
						</div>
					</form>
				</div>
				<!-- Product END -->
			</section>
			<!-- contact area End-->
        </div>
    </div>

    <script>
        const modal = document.getElementById("myModal");
        const openBtn = document.getElementById("openModal");
        const closeBtn = document.querySelector(".close");

        // openBtn.onclick = function() {
        //     modal.style.display = "block";
        // };

        closeBtn.onclick = function() {
            modal.style.display = "none";
        };

        window.onclick = function(event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };


        console.log(`modal request-modal here`)
    </script>