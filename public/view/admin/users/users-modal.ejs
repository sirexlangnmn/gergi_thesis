<style>
    body {
        font-family: Arial, sans-serif;
    }
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border-radius: 5px;
        width: 30%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }
    .close {
        color: #aaa;
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }
    .close:hover {
        color: black;
    }
</style>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="justifly- left close">&times;</span>
            <!-- contact area -->
			<section class="content-inner-1" style="padding-bottom: 0px; padding-top: 50px;">
				<!-- Product -->
				<div class="container">
					<form class="shop-form">
						<div class="row" style="margin-right: -45px;">
							<div class="col-lg-12 col-md-12">
								<div class="widget">
									<h4 class="widget-title" style="text-align: left;">Update User Details</h4>
									<div class="row col-lg-12 col-md-12">
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalName" placeholder="Name" readonly>
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalMobile" placeholder="Mobile" readonly>
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalEmail" placeholder="Email" readonly>
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalType" placeholder="User Type" readonly>
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalOrganization" placeholder="Organization">
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalCreatedAt" placeholder="Created At">
										</div>
										<div class="form-group col-lg-12 col-md-12">
											<input type="text" class="form-control" id="modalUpdatedAt" placeholder="Updated At">
										</div>
									</div>
									<button class="btn btn-primary btnhover mb-3" type="button" > Save <i class="fa fa-arrow-circle-o-down"></i></button>
								</div>
							</div>
						</div>
					</form>
				</div>
				<!-- Product END -->
			</section>
			<!-- contact area End-->
        </div>
    </div>

    <script>
        const modal = document.getElementById("myModal");
        const openBtn = document.getElementById("openModal");
        const closeBtn = document.querySelector(".close");

        // openBtn.onclick = function() {
        //     modal.style.display = "block";
        // };

        closeBtn.onclick = function() {
            modal.style.display = "none";
        };

        window.onclick = function(event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };
    </script>